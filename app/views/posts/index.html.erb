<h1>Articulos</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Titulos</th>
      <th>Dirección</th>
      <th>Categoria</th>
      <th>Publicado</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.url %></td>
        <td><%= post.categories.collect { |c| c.name }%></td>
        <td><%= post.status %></td>

        <td><%= link_to 'Vista Previa', public_post_path(post.url), class: 'btn btn-default' %></td>
        <td>
          <%= link_to 'Ver', post, class: 'btn btn-default' %>
          <%= link_to 'Editar', edit_post_path(post), class: 'btn btn-default' %>
          <%= link_to 'Eliminar', post, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-default' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Crear Artículo', new_post_path, class: 'btn btn-default' %>
