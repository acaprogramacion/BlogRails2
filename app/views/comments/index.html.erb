<h1>Comentarios</h1>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Contenido</th>
      <th>Usuario</th>
      <th>Articulo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
        <td><%= comment.name %></td>
        <td><%= link_to comment.post.title, public_post_path(comment.post.url) %></td>
        <td><%= link_to 'Editar', edit_comment_path(comment) %></td>
        <td><%= link_to 'Eliminar', comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

